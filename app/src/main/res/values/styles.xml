<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="personInfoTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="editable">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="resetEditStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Personinfo_icon">
        <item name="android:layout_marginLeft">16dp</item>
    </style>
    <style name="personinfo_text">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="bigFont_text">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#1eb9f2</item>
    </style>
    <style name="editPersonInfoText">
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    <style name="edit_personinfo_edit">
        <item name="android:layout_width">200dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:onClick">changeEditAble</item>
    </style>
    <style name="grey_dividing_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ebe9e9</item>
    </style>
    <style name="edit_personinfo_textLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#fff</item>
    </style>
    <style name="NoTitle">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>

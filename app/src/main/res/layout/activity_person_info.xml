<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:orientation="vertical"
        android:background="@drawable/person_info_bg1">
        <LinearLayout
            android:id="@+id/add_people_backLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:onClick="back"
            >
            <ImageView
                android:id="@+id/add_people_backImgView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/left"
                android:layout_marginRight="2dp"

                />
            <TextView
                android:id="@+id/add_people_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="返回"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-45dp"
        android:orientation="vertical">

        <com.itee.oachat.oaview.RoundImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mine_avatar" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-90dp"
            android:background="@drawable/person_info_headborder" />

        <com.ruffian.library.RTextView
            android:id="@+id/person_info_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="-浮生若梦°"
            android:textColor="#000"
            android:textSize="23sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/person_info_signature"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="一本正经的胡说八道"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/person_info_5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="personInfoToEdit"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/Personinfo_icon"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/person_info_1" />

                <TextView
                    style="@style/personinfo_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1040473977" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    style="@style/Personinfo_icon"
                    android:layout_width="15dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/person_info_2" />

                <TextView
                    style="@style/personinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="男" />

                <TextView
                    style="@style/personinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="20岁" />

                <TextView
                    style="@style/personinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="天蝎座" />

                <TextView
                    style="@style/personinfo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="浙江" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/person_info_rightimg"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="right"
                        android:src="@drawable/person_info_6"
                        android:layout_marginRight="5dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/Personinfo_icon"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/person_info_3" />

                <TextView
                    style="@style/personinfo_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="学生" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:src="@drawable/person_info_4" />


        <ImageButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/modify_button"
            android:onClick="personInfoToEdit"
            />

    </LinearLayout>

</LinearLayout>

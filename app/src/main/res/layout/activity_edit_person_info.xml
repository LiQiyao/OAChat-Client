<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        >
        <LinearLayout
            android:id="@+id/add_people_backLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:onClick="back"
            >
            <ImageView
                android:id="@+id/add_people_backImgView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/left"
                android:layout_marginRight="2dp"

                />
            <TextView
                android:id="@+id/add_people_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="返回"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑资料"
            style="@style/bigFont_text"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="13dp">
        <ImageView
            style="@style/grey_dividing_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#fff"
            >
            <TextView
                android:layout_height="match_parent"
                style="@style/editPersonInfoText"
                android:text="照片墙"

                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/mine_avatar"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="一张"
                    android:layout_gravity="right"
                    android:textColor="@color/unimportant"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            style="@style/grey_dividing_line"
            android:layout_marginBottom="15dp"
            />
        <ImageView
            style="@style/grey_dividing_line"
            />
        <LinearLayout
            style="@style/edit_personinfo_textLayout"
            >
            <TextView
                android:layout_height="match_parent"
                style="@style/editPersonInfoText"
                android:text="头像"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/person_info_6"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            style="@style/grey_dividing_line"
            />
        <LinearLayout
            style="@style/edit_personinfo_textLayout"
            >
            <TextView
                android:layout_height="match_parent"
                style="@style/editPersonInfoText"
                android:text="签名"
                />
            <EditText
                android:background="@null"
                android:text="123"
                style="@style/edit_personinfo_eidt"
                />
        </LinearLayout>

        <ImageView
            style="@style/grey_dividing_line"
            android:layout_marginBottom="15dp"
            />
        <ImageView
            style="@style/grey_dividing_line"
            />
        <LinearLayout
            style="@style/edit_personinfo_textLayout"
            >
            <TextView
                android:layout_height="match_parent"
                style="@style/editPersonInfoText"
                android:text="昵称"
                />
            <EditText
                style="@style/edit_personinfo_eidt"
                android:text="-浮生若梦°"
                android:background="@null"
                />
        </LinearLayout>
        <ImageView
            style="@style/grey_dividing_line"
            />
        <LinearLayout
            style="@style/edit_personinfo_textLayout"
            >
            <TextView
                android:layout_height="match_parent"
                style="@style/editPersonInfoText"
                android:text="性别"
                />
            <EditText
                android:text="男"
                style="@style/edit_personinfo_eidt"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/person_info_6"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            style="@style/grey_dividing_line"
            />
        <LinearLayout
            style="@style/edit_personinfo_textLayout"
            >
            <TextView
                android:layout_height="match_parent"
                style="@style/editPersonInfoText"
                android:text="生日"
                />
            <EditText
                style="@style/edit_personinfo_eidt"
                android:text="2018-12-1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/person_info_6"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            style="@style/grey_dividing_line"
            android:layout_marginBottom="15dp"
            />


        <ImageView
            style="@style/grey_dividing_line"
            />
        <LinearLayout
            style="@style/edit_personinfo_textLayout"
            >
            <TextView
                android:layout_height="match_parent"
                style="@style/editPersonInfoText"
                android:text="职业"
                />
            <EditText
                style="@style/edit_personinfo_eidt"
                android:hint="请输入你的职业"
                />
        </LinearLayout>
        <ImageView
            style="@style/grey_dividing_line"
            />
        <LinearLayout
            style="@style/edit_personinfo_textLayout"
            >
            <TextView
                android:layout_height="match_parent"
                style="@style/editPersonInfoText"
                android:text="公司"
                />
            <EditText
                style="@style/edit_personinfo_eidt"
                android:hint="填写公司，发现同事"
                />
        </LinearLayout>
        <ImageView
            style="@style/grey_dividing_line"
            />
        <LinearLayout
            style="@style/edit_personinfo_textLayout"
            >
            <TextView
                android:layout_height="match_parent"
                style="@style/editPersonInfoText"
                android:text="学校"
                />
            <EditText
                style="@style/edit_personinfo_eidt"
                android:text="浙江科技学院"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/person_info_6"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            style="@style/grey_dividing_line"
            />
        <LinearLayout
            style="@style/edit_personinfo_textLayout"
            >
            <TextView
                android:layout_height="match_parent"
                style="@style/editPersonInfoText"
                android:text="邮箱"
                />
            <EditText
                style="@style/edit_personinfo_eidt"
                android:text="1040473978@qq.com"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/person_info_6"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            style="@style/grey_dividing_line"
            />
    </LinearLayout>
</LinearLayout>

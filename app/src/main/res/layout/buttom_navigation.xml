<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/layshape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:id="@+id/message_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_message_press"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消  息"
            android:layout_below="@+id/message_pic"
            android:textSize="12sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:id="@+id/contacts_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_contact_normal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:text="联系人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contacts_pic"
            android:id="@+id/contact_text"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        >
        <ImageView
        android:id="@+id/somethingelse"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/icon_set_normal"
        android:layout_alignParentRight="true"
/>
        <TextView
            android:id="@+id/set_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/somethingelse"
            android:layout_alignStart="@+id/somethingelse"
            android:layout_below="@+id/somethingelse"
            android:text="设 置"
            android:textSize="12sp"
            android:layout_marginLeft="1dp"
            />
    </RelativeLayout>
</RelativeLayout>

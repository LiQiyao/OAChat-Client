<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="111111111"
        android:gravity="center"
        android:id="@+id/message_time"
        />
    <com.yytech.ochatclient.oaview.XCRoundImageView
        android:id="@+id/head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:src="@drawable/mayknow_head"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/message_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/chat_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatfrom_bg_normal"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/message_time"
        android:layout_toRightOf="@+id/head"
        android:layout_toEndOf="@+id/head">
        <TextView
            android:id="@+id/tv_chat_me_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text=""
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chat_image"
            />
        <ImageView
            android:adjustViewBounds = "true"
            android:focusable="false"
            android:id="@+id/chat_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            />
    </RelativeLayout>

</RelativeLayout>